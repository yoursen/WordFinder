<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WordFinder.Views"
    x:Class="WordFinder.Views.GameOver"
    Shell.NavBarIsVisible="False">

    <Grid>
        <Image Source="game_background_image2.png"
            Aspect="AspectFill"
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="CenterAndExpand"
            Margin="-10"/>

        <VerticalStackLayout VerticalOptions="CenterAndExpand">
            <VerticalStackLayout HorizontalOptions="Center">
                <Label Text="Score:"/>
                <Label Text="{Binding Score}"/>
                <Label Text="Best score:"/>
                <Label Text="{Binding BestScore}"/>
            </VerticalStackLayout>

            <Button Margin="0,10,0,0"
                WidthRequest="125"
                BackgroundColor="{DynamicResource Accent}"
                Text="Main menu"
                Clicked="OnMainMenuClicked"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
